    <td><%= uchronia.image_id %></td>
    <td><%= uchronia.show_bio %></td>    
    <td><%= uchronia.media_embed %></td>
    <td><%= uchronia.title %></td>
    <td><%= uchronia.pod %></td>
    <td><%= uchronia.description %></td>
    <td><%= link_to 'Show', uchronia %></td>
    <td><%= link_to 'Edit', edit_uchronia_path(uchronia) %></td>
    <td><%= link_to 'Destroy', uchronia, method: :delete, data: { confirm: 'Are you sure?' } %></td>
