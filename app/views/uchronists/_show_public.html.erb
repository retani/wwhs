<div class="main">

	<h1>Uchronist<% if uchronist.sex == 'weiblich' %>in<% end %> <%= uchronist.name %></h1>
	
	<div class="row">
		<div class="col-2">
			<% if uchronist.image %>
				<%= image_tag uchronist.image.image.url(:medium) %>
			<% end %> 
			
			<% if uchronist.media_embed %>
				<%= uchronist.media_embed.html_safe %>
			<% end %>
			
		</div>
		
		<div class="col-2">
			<%= uchronist.description.html_safe %>
	
			<p>
				<b>Untersucht die Uchronien</b> <% uchronist.uchronias.each do |u| %>
					<%= link_to u.title, "#/" + u.slug %>
				<% end %>
			</p>
	
		</div>
	</div>

</div>

