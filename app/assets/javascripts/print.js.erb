$(window).load(function() {
	$('.page').each( function (i,elem) {
		var h = $(elem).height();
		var maxh = $(elem).attr("data-scale-height");
		while(h > maxh){
			console.log(maxh);
			h = $(elem).height();
			var size = parseFloat($(elem).css('font-size'));
			size -= 1;
			$(elem).css('font-size', size + 'px');
		}

	});

});

function print_until(id) {
	found = false;
	$("div[data-bio-id]").each( function(index, elem){
		if (found)
		{
			$(elem).hide();
			$(elem).addClass="not-print";
		}
		else
		{
			$(elem).show();
			$(elem).removeClass="not-print";
		}
		if ($(elem).attr("data-bio-id") == id) found = true;
	});
}